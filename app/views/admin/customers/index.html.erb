<div id="page">
    
  <h1>会員一覧</h1>
  
  
  <table class="index-table">
    
    <thead>
      <tr>
        <th>会員ID</th>
        <th>会員名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.customer_name, admin_customer_path(customer) %></td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_active %>
              有効
            <% else %>
              無効
            <%b end %>
          </td>
        </tr>
      <% end %>
    </tbody>
    
  </table>
    
  <%= paginate @customers %>
  
</div>
